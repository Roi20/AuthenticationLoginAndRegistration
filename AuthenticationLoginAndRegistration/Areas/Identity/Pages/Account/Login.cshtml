@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section CustomStyles{

    <link rel="stylesheet" href="@Url.Content("~/css/auth.css")"/>
}

<div class="container mt-5 h-80" id="loginContainer">
    <div class="row p-0 h-80">
        <div class="col-md-7 p-0" id="imgHolder">
           <img src="~/images/blackandwhitebg.jpg" class="p-0" height="100%" width="100%"/>
        </div>
        <div class="col-md-5 p-0" id="formHolder">
            <h2 class="text-light mt-2" id="h1Text">Login</h2>
            <hr class="text-secondary"/>
            <h6 class="text-light p-2 mb-0">Welcome back!</h6>
            <h6 class="text-light p-2 mt-0 fw-bold">
                Manage your To do's <br />
                by login your account
            </h6>
            <form id="account" method="post" class="mt-0">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div id="validation"><span asp-validation-for="Input.Email" class="text-danger"></span></div>
                <div class="form-group mb-2 p-1" id="inputHolder">
                    <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="email" />
                </div>
                <div id="validation"><span asp-validation-for="Input.Password" class="text-danger"></span></div>
                <div class="form-group p-1" id="inputHolder">
                    <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="password" />
                </div>
                <div class="col-12 checkbox p-2 mt-0 mb-3" id="checkBox">
                    <label asp-for="Input.RememberMe" class="form-label text-light">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="p-1" id="btnHolder">
                    <button id="login-submit" type="submit" class="btn mt-2">Login</button>
                </div>
                <div id="forgotPassHolder">
                    <label class="p-0">
                        <a class="text-light text-decoration-none" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </label>
                </div>
            </form>
        </div>
    </div>
