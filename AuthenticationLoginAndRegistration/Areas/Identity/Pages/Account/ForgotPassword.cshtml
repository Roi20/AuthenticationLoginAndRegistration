@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

@section CustomStyles{

    <link  rel="stylesheet" href="@Url.Content("~/css/auth.css")"/>
}


<div class="container mt-5" id="loginContainer">
    <div class="row p-0" id="rowContainer">
        <div class="col-lg-7 p-0" id="imgHolder">
            <img src="~/images/blackandwhitebg.jpg" class="p-0" height="100%" width="100%" />
        </div>
        <div class="col-lg-5 p-0" id="formHolder">
            <div class="mt-5 pb-2" id="textHolder">
                <h3 class="text-light text-start mb-3" id="h1Text">Forgot Password</h3>
                <p class="text-light">
                    Enter your email <br />to reset your password
                </p>
            </div>
            <form method="post" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div id="validation"><span asp-validation-for="Input.Email" class="text-danger"></span></div>
                <div class="form-group mb-2 p-1" id="inputHolder">
                    <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="email@example.com" />
                </div>
                <div class="pb-5" id="btnHolder">
                    <button type="submit" class="btn mt-3" id="resetSubmit">Confirm</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
