@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section CustomStyles {

    <link rel="stylesheet" href="@Url.Content("~/css/auth.css")"/>
}


<div class="container mt-3">
        <div class="col-md-4">
           <div class="card">
               <div class="card-header">
                   <h2>Register</h2>
               </div>
               <div class="card-body">
                    <form class="mt-2" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <span asp-validation-for="Input.FirstName" class="text-danger" id="validation"></span>
                        <div class="form-group mb-2 input-group flex-nowrap">
                             <span class="input-group-text" id="addon-wrapping">
                                 <i class="fa-solid fa-user-tie"></i>
                             </span>
                             <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" placeholder="firstname" />
                        </div>
                        <span asp-validation-for="Input.LastName" class="text-danger" id="validation"></span>
                        <div class="form-group mb-2 input-group flex-nowrap">
                            <span class="input-group-text" id="addon-wrapping">
                                <i class="fa-solid fa-user-tie"></i>
                            </span>
                            <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" placeholder="lastname" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger" id="validation"></span>
                        <div class="form-group mb-2 input-group flex-nowrap">
                            <span class="input-group-text" id="addon-wrapping">
                                <i class="fa-solid fa-envelope"></i>
                            </span>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="email" />
                        </div>
                         <span asp-validation-for="Input.CompanyName" class="text-danger" id="validation"></span>
                        <div class="form-group mb-2 input-group flex-nowrap">
                            <span class="input-group-text" id="addon-wrapping">
                                <i class="fa-solid fa-building"></i>
                            </span>
                            <input asp-for="Input.CompanyName" class="form-control" autocomplete="company" aria-required="true" placeholder="company" />
                        </div>
                         <span asp-validation-for="Input.Password" class="text-danger" id="validation"></span>
                        <div class="form-group mb-2 input-group flex-nowrap">
                            <span class="input-group-text" id="addon-wrapping">
                                <i class="fa-solid fa-user-lock"></i>
                            </span>
                            <input asp-for="Input.Password" id="pass" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        </div>
                        <div class="form-group mb-2 input-group flex-nowrap">
                            <span class="input-group-text" id="addon-wrapping">
                                <i class="fa-solid fa-user-check"></i>
                            </span>
                            <input asp-for="Input.ConfirmPassword" id="cPass" class="form-control" autocomplete="new-password" aria-required="true" placeholder="confirm password" />
                        </div>
                         <span asp-validation-for="Input.ConfirmPassword" class="text-danger" id="validation"></span>
                        <button id="registerSubmit" type="submit" class="w-100 btn">Register</button>
                    </form>
                 </div>
           </div>
        </div>
