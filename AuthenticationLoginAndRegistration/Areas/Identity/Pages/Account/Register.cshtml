@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section CustomStyles {

    <link rel="stylesheet" href="@Url.Content("~/css/auth.css")"/>
}

<div class="container mt-5" id="loginContainer">
    <div class="row p-0" id="rowContainer">
        <div class="col-lg-7 p-0" id="imgHolder">
            <img src="~/images/blackandwhitebg.jpg" class="p-0" height="100%" width="100%" />
        </div>
        <div class="col-lg-5 p-0" id="formHolder">
            <div class="mt-5" id="textHolder">
                <h2 class="text-light text-start mb-3" id="h1Text">Register</h2>
            </div>
            <form class="mt-xl-4 mt-sm-3" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert" id="validation"></div>
                <div id="validation"><span asp-validation-for="Input.CompanyName" class="text-danger"></span></div>
                <div class="form-group mb-2 p-1" id="inputHolder">
                    <input asp-for="Input.CompanyName" autocomplete="firstname" aria-required="true" placeholder="Company" />
                </div>
                <div id="validation"><span asp-validation-for="Input.FirstName" class="text-danger"></span></div>
                <div class="form-group mb-2 p-1" id="inputHolder">
                    <input asp-for="Input.FirstName" autocomplete="firstname" aria-required="true" placeholder="firstname" />
                </div>
                <div id="validation"><span asp-validation-for="Input.LastName" class="text-danger"></span></div>
                <div class="form-group mb-2 p-1" id="inputHolder">
                    <input asp-for="Input.LastName" autocomplete="lastname" aria-required="true" placeholder="lastname" />
                </div>
                <div id="validation"><span asp-validation-for="Input.Email" class="text-danger"></span></div>
                <div class="form-group mb-2 p-1" id="inputHolder">
                    <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="email" />
                </div>
                <div id="validation"><span asp-validation-for="Input.Password" class="text-danger"></span></div>
                <div class="form-group mb-2 p-1" id="inputHolder">
                    <input asp-for="Input.Password" id="pass" autocomplete="new-password" aria-required="true" placeholder="password" />
                </div>
                <div id="validation"><span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span></div>
                <div class="form-group mb-2 p-1" id="inputHolder">
                    <input asp-for="Input.ConfirmPassword" id="cPass" autocomplete="new-password" aria-required="true" placeholder="confirm password" />
                </div>
                <div class="pb-1" id="btnHolder">
                    <button id="registerSubmit" type="submit" class="btn mt-2">Register</button>
                </div>
                <div id="forgotPassHolder" class="pb-3">
                    <label class="p-0">
                        <a class="text-light text-decoration-none" id="loginTextHolder" asp-page="./Login">Login here</a>
                    </label>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
