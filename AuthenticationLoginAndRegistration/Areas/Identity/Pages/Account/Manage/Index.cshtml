@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<partial name="_StatusMessage" for="StatusMessage" />
<div class="row mt-2">
    <div class="col">
        <div id="textTitle">
            <h3 class="text-light fw-bold">@ViewData["Title"]</h3>
        </div>
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert" id="validation"></div>
            <div class="form-group mb-2 p-1" id="inputHolder">
                <input asp-for="Username" placeholder="Please choose your username." disabled />
            </div>
            <div id="validation"><span asp-validation-for="Input.PhoneNumber" class="text-danger"></span></div>
            <div class="form-group mb-2 p-1" id="inputHolder">
                <input asp-for="Input.PhoneNumber" placeholder="Please enter your phone number."/>
            </div>
            <div class="p-1" id="btnHolder">
                <button id="update-profile-button" type="submit" class="btn mt-2">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
