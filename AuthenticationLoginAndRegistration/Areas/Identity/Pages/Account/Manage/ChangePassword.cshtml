@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row mt-2">
    <div class="col">
        <div id="textTitle">
            <h3 class="text-light fw-bold">@ViewData["Title"]</h3>
        </div>
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert" id="validation"></div>
            <div id="validation"><span asp-validation-for="Input.OldPassword" class="text-danger"></span></div>
            <div class="form-group mb-2 p-1" id="inputHolder">
                <input asp-for="Input.OldPassword" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
            </div>
            <div id="validation"><span asp-validation-for="Input.NewPassword" class="text-danger"></span></div>
            <div class="form-group mb-2 p-1" id="inputHolder">
                <input asp-for="Input.NewPassword" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
            </div>
            <div id="validation"><span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span></div>
            <div class="form-group mb-2 p-1" id="inputHolder">
                <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password."/>
            </div>
            <div class="p-1" id="btnHolder">
                <button type="submit" class="btn mt-2">Update password</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
