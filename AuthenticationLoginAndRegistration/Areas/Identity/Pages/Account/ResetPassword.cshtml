@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

@section CustomStyles{

    <link rel="stylesheet" href="@Url.Content("~/css/auth.css")"/>
}

<div class="container mt-5" id="loginContainer">
    <div class="row p-0" id="rowContainer">
        <div class="col-lg-7 p-0" id="imgHolder">
            <img src="~/images/blackandwhitebg.jpg" class="p-0" height="100%" width="100%" />
        </div>
        <div class="col-lg-5 p-0" id="formHolder">
            <div class="mt-5 pb-2" id="textHolder">
                <h2 class="text-light text-start mb-3" id="h1Text">Reset Password</h2>
                <p class="text-light">
                    You are about to reset your password, <br />
                    Enter you credentials to complete the operation
                </p>
            </div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <input asp-for="Input.Code" type="hidden" />
                <div id="validation"><span asp-validation-for="Input.Email" class="text-danger"></span></div>
                <div class="form-group mb-2 p-1" id="inputHolder">
                    <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                </div>
                <div id="validation"><span asp-validation-for="Input.Password" class="text-danger"></span></div>
                <div class="form-group mb-2 p-1" id="inputHolder">
                    <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." />
                </div>
                <div id="validation"><span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span></div>
                <div class="form-group mb-2 p-1" id="inputHolder">
                    <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." />
                </div>
                <div class="pb-5" id="btnHolder">
                    <button type="submit" class="btn mt-3" id="reset-submit">Reset Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
